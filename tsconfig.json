{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es6", "scripthost", "es2018"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "@textcomplete/core": [
        "./src/components/editor/textcomplete/textcomplete-core/index"
      ],
      "@textcomplete/utils": [
        "./src/components/editor/textcomplete/textcomplete-utils/index"
      ],
      "@textcomplete/textarea": [
        "./src/components/editor/textcomplete/textcomplete-textarea/index"
      ]
    },
    "target": "es2018"
  },
  "include": ["src/*.ts", "src/*.tsx"]
}
